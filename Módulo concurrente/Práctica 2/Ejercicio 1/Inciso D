{Modifique el inciso anterior para que ahora el fiscalizador informe también, cuál fue el
robot ganador.}
programa ejercicio1
procesos
  proceso juntarFlores(ES cantFlo: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      cantFlo := cantFlo + 1
  fin
  proceso recorrerAv(ES cantidadFlores: numero)
  comenzar
    cantidadFlores := 0
    repetir 9
      juntarFlores(cantidadFlores)
      mover
    juntarFlores(cantidadFlores) {junto las flores de la ult esq = (1,10)}
  fin
  proceso actualizarMaximo(E cantFlo: numero; E quienEs: numero; ES cantMax: numero; ES quienEsMax: numero)
  comenzar
    si (cantFlo > cantMax)
      cantMax := cantFlo
      quienEsMax := quienEs
  fin
  proceso asignoQuienEs
  comenzar
    EnviarMensaje(1, r1)
    EnviarMensaje(2, r2)
    EnviarMensaje(3, r3)
    EnviarMensaje(4, r4)
    EnviarMensaje(5, r5)
    EnviarMensaje(6, r6)
  fin
areas
  area1: AreaP (1, 1, 1, 10)
  area2: AreaP (2, 11, 2, 20)
  areaFiscalizador: AreaP (2, 1, 2, 1)
  area3: AreaP (3, 21, 3, 30)
  area4: AreaP (4, 31, 4, 40)
  area5: AreaP (5, 41, 5, 50)
  area6: AreaP (6, 51, 6, 60)
robots
  robot robot1
  variables
    f, quienSoy: numero
  comenzar
    f := 0
    RecibirMensaje(quienSoy, rF)
    recorrerAv(f)
    EnviarMensaje(quienSoy, rF)
    EnviarMensaje(f, rF)
  fin     
  robot fiscalizador
  variables
    f, cantidadFloresMax, quienEs, quienEsMax: numero
  comenzar
    cantidadFloresMax := -1
    asignoQuienEs
    repetir 6  
      RecibirMensaje(quienEs, *)
      si (quienEs = 1)
        RecibirMensaje(f, r1)
      sino
        si (quienEs = 2)
          RecibirMensaje(f, r2)
        sino
          si (quienEs = 3)
            RecibirMensaje(f, r3)
          sino
            si (quienEs = 4)
              RecibirMensaje(f, r4)
            sino
              si (quienEs = 5)
                RecibirMensaje(f, r5)
              sino
                si (quienEs = 6)
                  RecibirMensaje(f, r6)
      actualizarMaximo(f, quienEs, cantidadFloresMax, quienEsMax)
    Informar(quienEsMax, cantidadFloresMax)
  fin
variables
  r1, r2, r3, r4, r5, r6: robot1
  rF: fiscalizador  
comenzar
  AsignarArea(r1, area1)
  AsignarArea(r2, area2)
  AsignarArea(rF, areaFiscalizador)
  AsignarArea(r3, area3)
  AsignarArea(r4, area4)
  AsignarArea(r5, area5)
  AsignarArea(r6, area6)
  Iniciar(r1, 1, 1)
  Iniciar(r2, 2, 11)
  Iniciar(rF, 2, 1)
  Iniciar(r3, 3, 21)
  Iniciar(r4, 4, 31)
  Iniciar(r5, 5, 41)
  Iniciar(r6, 6, 51)
fin
