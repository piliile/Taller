programa ejercicio4
procesos
  proceso limpiarFlores(ES cantFlo: numero)
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
      cantFlo := cantFlo + 1
  fin
  proceso limpiarPapeles(ES cantPap: numero)
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
      cantPap := cantPap + 1
  fin
  proceso limpioCalle(E cantMov: numero)
  variables
    cantidadFlores: numero
  comenzar
    cantidadFlores := 0
    repetir cantMov-1
      limpiarFlores(cantidadFlores)
    repetir cantidadFlores
      depositarFlor
  fin
  proceso limpioAvenida(E cantMov: numero)
  variables
    cantidadPapeles, avenida, calle: numero
  comenzar
    avenida:= PosAv 
    calle:= PosCa 
    cantidadPapeles := 0
    repetir cantMov-1
      limpiarPapeles(cantidadPapeles)
    Pos(avenida, calle)
    repetir cantidadPapeles
      depositarPapel
  fin
areas
  area1: AreaP (1, 75, 15, 75)
  area1_2: AreaP (1, 80, 15, 80)
  area2: AreaP (75, 80, 75, 99)
  area2_2: AreaP (80, 80, 80, 99)
  area3: AreaP (70, 10, 99, 10)
  area3_2: AreaP (70, 15, 99, 15)
  area4: AreaP (10, 1, 10, 10)
  area4_2: AreaP (15, 1, 15, 10)
robots
  robot robot1
  comenzar
    limpioCalle(15)
    Pos(1, 80)
    limpioCalle(15)
  fin
  robot robot2
  comenzar
    limpioAvenida(20)
    Pos(80, 80)
    limpioAvenida(20)
  fin
  robot robot3
  comenzar
    limpioCalle(30)
    Pos(15, 70)
    limpioCalle(30)
  fin  
  robot robot4
  comenzar
    limpioAvenida(10)
    Pos(15, 1)
    limpioAvenida(10)
  fin  
variables
  r1: robot1
  r2: robot2
  r3: robot3
  r4: robot4
comenzar
  AsignarArea(r1, area1)
  AsignarArea(r1, area1_2)
  AsignarArea(r2, area2)
  AsignarArea(r2, area2_2)
  AsignarArea(r3, area3)
  AsignarArea(r3, area3_2)
  AsignarArea(r4, area4)
  AsignarArea(r4, area4_2)
  Iniciar(r1, 1, 75)
  Iniciar(r2, 75, 80)
  Iniciar(r3, 70, 10)
  Iniciar(r4, 10, 1)
fin
