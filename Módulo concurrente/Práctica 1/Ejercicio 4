programa ejercicio4
procesos
  proceso limpiarFlores
  comenzar
    mientras HayFlorEnLaEsquina
      tomarFlor
  fin
  proceso limpiarPapeles
  comenzar
    mientras HayPapelEnLaEsquina
      tomarPapel
  fin
  proceso recorroAvenidaFlores
  comenzar
    repetir 99 
      limpiarFlores
      mover
  fin
  proceso areaImpar(E finAv: numero)
  variables
    i: numero 
  comenzar
    i := PosAv
    repetir finAv 
      recorroAvenidaFlores
      i := i + 1
      Pos(i, 1)
  fin
  proceso recorroAvenidaPapeles
  comenzar
    repetir 99
      limpiarPapeles
      mover
  fin
  proceso areaPar(E finAv: numero)
  variables
    i: numero  
  comenzar
    i := PosAv
    repetir finAv 
      recorroAvenidaPapeles
      i := i + 1
      Pos(i, 1)
  fin  
  
  
areas
  area1: AreaP (1, 1, 25, 100)
  area2: AreaP (26, 1, 50, 100)
  area3: AreaP (51, 1, 75, 100)
  area4: AreaP (76, 1, 100, 100)
  
robots
  robot robot1
  variables 
    inicioAv, finAv: numero
  comenzar
    finAv := 25
    areaImpar(finAv)
    finAv := 75
    Pos(51, 1)
    areaImpar(finAv)
  fin
  robot robot2
  variables 
    inicioAv, finAv: numero
  comenzar
    finAv := 50
    areaPar(finAv)
    finAv := 100
    Pos(76, 1)
    areaPar(finAv)
  fin
variables
  r1: robot1
  r2: robot2

comenzar
  AsignarArea(r1, area1)
  AsignarArea(r1, area3)
  AsignarArea(r2, area2)
  AsignarArea(r2, area4)
  Iniciar(r1, 1, 1)
  Iniciar(r2, 26, 1)
fin
