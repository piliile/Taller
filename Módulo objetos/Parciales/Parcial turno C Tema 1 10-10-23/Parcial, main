package parcialturnoCtema1_10_10_23;

import PaqueteLectura.Lector;

public class Parcial {

    public static void main(String[] args) {
        Estacion esta = new Estacion("47, 4 y 5"); // cantidad de surtidores 0?? inicializo la diml.. / o es en el constructor q inicializo y solo recibe direccion
        System.out.println("Ingrese la cantidad de surtidores de la estación (MAXIMO 6): ");
        int cantidadSurt = Lector.leerInt();
        for (int i = 0; i < cantidadSurt ; i++){    
            System.out.println("Ingrese (EN ORDEN) el combustible, el precio por litro del surtidor y la cantidad máxima de ventas: ");
            Surtidor surt = new Surtidor(Lector.leerDouble(), Lector.leerDouble(), Lector.leerInt());
            esta.agregarSurtidor(surt);
        }
        
        System.out.println("Ingrese la cantidad de ventas que desea registrar: ");
        int cantVentas = Lector.leerInt();
        for (int i = 0; i < cantVentas; i++) {
            System.out.println("Ingrese el número de surtidor (1-" + cantidadSurt + "): ");
            int numSurt = Lector.leerInt();
            System.out.println("Ingrese el dni de cliente, una cantidad de litros y una forma de pago: ");
            esta.registrarVenta(numSurt, Lector.leerInt(), Lector.leerInt(), Lector.leerString());
        }    
            
        System.out.println("El número de surtidor que recaudó más ventas es: " + esta.mayorNumeroSurtidor());
        
        
        System.out.println("La representación de la estación es la siguiente: ");
        System.out.println(esta.toString());
    }
    
}
