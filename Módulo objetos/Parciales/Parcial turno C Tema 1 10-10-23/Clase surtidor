package parcialturnoCtema1_10_10_23;

public class Surtidor {
    private double combustible;
    private double precioPorLitro;
    private Venta [] infoVentas;
    private int cantidadVentas; // sería como la dimL
    private int dimF;

    public Surtidor(double combustible, double precioPorLitro, int V) {
        this.combustible = combustible;
        this.precioPorLitro = precioPorLitro;
        this.cantidadVentas = 0;
        this.infoVentas = new Venta [V]; // es como maximo V, pero puede no llegar a eso por eso añadimos la dimL = cantidadVentas
        this.dimF = V;
        for (int i = 0; i < V; i ++)
            infoVentas[i] = null;
    }

    public double getCombustible() {
        return combustible;
    }

    public void setCombustible(double combustible) {
        this.combustible = combustible;
    }

    public double getPrecioPorLitro() {
        return precioPorLitro;
    }

    public void setPrecioPorLitro(double precioPorLitro) {
        this.precioPorLitro = precioPorLitro;
    }

    public int getCantidadVentas() {
        return cantidadVentas;
    }

    public void setCantidadVentas(int cantidadVentas) {
        this.cantidadVentas = cantidadVentas;
    }
    
    public void agregarVenta(Venta v){
        if (this.cantidadVentas < this.dimF){
            this.infoVentas[this.cantidadVentas] = v;
            this.cantidadVentas++;
        }
    }
    public double calculoTotalMonto(){
        double total = 0; 
        for (int i = 0; i < this.cantidadVentas; i++)
            if (this.infoVentas[i].getMedioDePago().equals("Efectivo")){
                total += this.infoVentas[i].getMonto();
            }
        return total;               
    }
 
    public String toString(){
        String auxi = "";
        for (int i = 0; i < this.cantidadVentas; i++){
            auxi += (this.infoVentas[i].getDniCliente() + ", " + this.infoVentas[i].getCantidadLitros() + ", " +
                    this.infoVentas[i].getMonto());
        }
        auxi += "]";
        return auxi;
    }
    
}
