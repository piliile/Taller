package parciales.parcialturnoCtema2_14_10_2022;
public class Butaca {
    private String descriptor;
    private double precio;
    private boolean ocupada;

    public Butaca(int numFila, int numButaca) {
        this.descriptor = "Butaca: " + numFila + " - " + numButaca;
        this.precio = 800 + 100 * numFila;
        this.ocupada = false;
    }
    
    public double ocupoButacaYDevuelvoPrecio(int F){
        this.ocupada = true;
        return getPrecio();
    }

    public double getPrecio() {
        return precio;
    }
    
    public boolean isOcupada() {
        return ocupada;
    }
    
    public void desocupoButaca(){
        this.ocupada = false;
    }
    
    public String toString(int i, int j){
        return this.descriptor + ", " + this.precio + ", " + this.ocupada;
    }
}
