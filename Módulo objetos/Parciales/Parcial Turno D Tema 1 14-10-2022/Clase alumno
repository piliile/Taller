package parciales.parcialturnoDtema1_14_10_2022;

public class Alumno {
    private int dni;
    private String nombre;
    private int asistencias;
    private int cantidadAutoevAprobadas;

    public Alumno(int dni, String nombre) {
        this.dni = dni;
        this.nombre = nombre;
        this.asistencias = 0;
        this.cantidadAutoevAprobadas = 0;
    }

    public int getDni() {
        return dni;
    }
    
    public void incrementoAsistenciaAlumno(){
        this.asistencias++;
    }
    
    public void incrementoAutoevaluacionesAlumno(){
        this.cantidadAutoevAprobadas++;
    }

    public int getAsistencias() {
        return asistencias;
    }

    public int getCantidadAutoevAprobadas() {
        return cantidadAutoevAprobadas;
    }
    
    
}
