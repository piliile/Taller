package parcialturnoAtema1_19_10_2023;

public class Producto {
    private int codigo;
    private String descripcion;
    private double precioUnitario;
    private int cantidadUnidades;

    public Producto(int codigo, String descripcion, double precioUnitario, int cantidadUnidades) {
        this.codigo = codigo;
        this.descripcion = descripcion;
        this.precioUnitario = precioUnitario;
        this.cantidadUnidades = cantidadUnidades;
    }
    
    public int getCantidadUnidades(){
        return this.cantidadUnidades;
    }
    
    public double getPrecioFinal(){
        return this.cantidadUnidades * this.precioUnitario;
    }

    public int getCodigo() {
        return codigo;
    }

    public String getDescripcion() {
        return descripcion;
    }
    
    
}
