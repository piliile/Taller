package parcialTurnoC16_10_2024;
import PaqueteLectura.Lector;
import PaqueteLectura.GeneradorAleatorio;
public class Parcial {

    public static void main(String[] args) {
        GeneradorAleatorio.iniciar();
        System.out.println("Ingrese (EN ORDEN) el nombre, la cantidad de suscriptores y la cantidad de categorías que se"
                + " quiere almacenar de la plataforma: ");
        Plataforma plat = new Plataforma(Lector.leerString(), Lector.leerInt(), Lector.leerInt());
        
        System.out.println("Ingrese la cantidad de estrenos que quiere cargar en la agenda: ");
        int cantidadEstrenosAAgregar = Lector.leerInt();
        for (int i = 0; i < cantidadEstrenosAAgregar; i++){
            System.out.println ("Ingrese (EN ORDEN) el título, el tipo de contenido (película/serie), la recaudación y la cantidad de visualizaciones");
            Estreno est = new Estreno(Lector.leerString(), Lector.leerString(), Lector.leerDouble(), Lector.leerInt());
            System.out.println("Ingrese una categoría X para registrar su estreno: ");
            plat.registrarEstreno(est, Lector.leerInt());
        }
        
        System.out.println("Ingrese una categoría X para listar sus estrenos: ");
        int categoriaX = Lector.leerInt();
        System.out.println("El listado de estrenos de la categoría " + categoriaX + " es: ");
        System.out.println(plat.listadoEstrenosDeX(categoriaX));
        
        System.out.println("La ganancia total de la plataforma en estreno de series es: " + plat.calcularGananciaTotal());
        
        System.out.println("El informe de la plataforma es el siguiente: ");
        System.out.println(plat.toString());
    }
    
}
