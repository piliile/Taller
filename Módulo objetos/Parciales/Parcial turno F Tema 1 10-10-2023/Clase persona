package parcialturnoFtema1_10_10_2023;

public abstract class Persona {
    private String nombrePersona;
    private int dni;
    private int añoIngreso;
    private double sueldoBasico;

    public Persona(String nombrePersona, int dni, int añoIngreso, double sueldoBasico) {
        this.nombrePersona = nombrePersona;
        this.dni = dni;
        this.añoIngreso = añoIngreso;
        this.sueldoBasico = sueldoBasico;
    }
    
    public double retornarSueldoACobrar(){
        double monto = 0;
        if ((2023 - this.añoIngreso) > 20)
            monto = (this.sueldoBasico * 0.1);
        else
            monto = this.sueldoBasico;
        return monto;
    }
        
    public String toString(){
        return this.nombrePersona + ", " + this.dni + ", " + this.retornarSueldoACobrar();
    }
}
