package MisClases;
import SeDispone.FiguraP4;
public class Dibujo {
    private String titulo;
    private FiguraP4 [] vector;
    private int guardadas;
    private int capacidadMaxima = 10;
    //inicia el dibujo, sin figuras
    public Dibujo (String titulo){
        this.titulo = titulo;
        this.guardadas = 0;
        this.vector = new FiguraP4[this.capacidadMaxima];
    }

    //agrega la figura al dibujo
    public void agregar(FiguraP4 f){
      if (! this.estaLleno()) {
        this.vector[guardadas] = f;  
        this.guardadas++;
        System.out.println("La figura " + f.toString() + " se ha guardado.");
      }
    }

    //calcula el área del dibujo:
    //suma de las áreas de sus figuras
    public double calcularArea(){
        double aux = 0;
        for (int i = 0; i < this.guardadas; i++)
            aux += this.vector[i].calcularArea();
        return aux;
    }
            
    //imprime el título, representación de cada figura, y área del dibujo
    public void mostrar(){
       String aux = "Titulo: " + this.titulo; 
       for(int i=0; i < this.guardadas; i++) {
            aux += this.vector[i].toString() + ". Área: " + this.vector[i].calcularArea();
        }
       System.out.println(aux);
    }
    //retorna está lleno el dibujo
    public boolean estaLleno() {
        return (guardadas == capacidadMaxima);
    }
}
