package practica4;
import practica4.Estacion;

public abstract class Sistema {
    private Estacion estacion;
    private int N; // N = años consecutivos a partir de año A.
    private int A; // A = año.
    private double [][] temperaturas; // Matriz que guarda temperaturas.

    public Sistema(Estacion estacion, int N, int A) {
        this.estacion = estacion;
        this.N = N;
        this.A = A;
        temperaturas = new double [N][12];
        for (int i = 0; i < N; i++) // queremos inicializar todos los años
            for (int j = 0; j<12; j++) // queremos inicializar todos los meses de los años
                temperaturas[i][j] = 1000; // inicializamos en un valor grande (lo pide el ejercicio)
    }

    public Estacion getEstacion() {
        return estacion;
    }

    public void setEstacion(Estacion estacion) {
        this.estacion = estacion;
    }

    public int getN() {
        return N;
    }

    
    public int getA() {
        return A;
    }

    
    public void setTemperaturaB(int año, int mes, double tempe){
        temperaturas[año - A][mes - 1] = tempe;
    }
    
    public double getTemperaturaC(int año, int mes) {
        return temperaturas[año - A][mes - 1];
    }
    
    public String mayorTemperatura(){
        double aux = -10000; int mayorAño = -1; int mayorMes = -1;
        for (int i = 0; i < N; i++)
            for (int j = 0; j < 12; j++)
                if (aux < temperaturas[i][j]){
                    aux = temperaturas[i][j];
                    mayorAño = i;
                    mayorMes = j;
                }
        return "Año: " + (mayorAño + A) + ". Y el mes: " + (mayorMes + 1); // NO OLVIDAR SUMARLEEE
    }
    
    public abstract String calcularPromedio();        
    
    @Override
    public String toString(){
        return (estacion.toString() + "\n" + calcularPromedio());
    }
}
