package MisClases;
import MisClases.LibroA;

public class Estante {
    private LibroA [] libros;
    private int cantidadLibros;
    private int dimF = 20;
    
    public Estante() {
        cantidadLibros = 0;
        libros = new LibroA [dimF];
    }
    
    public int getCantidadLibros(){
        return cantidadLibros;
    }
    
    public boolean estaLleno(){
        return dimF == cantidadLibros;
    }
    
    public void agregarLibro(LibroA libroLeido){
        if (dimF < cantidadLibros) {
            libros[cantidadLibros] = libroLeido;
            cantidadLibros++;
        }
        else
            System.out.println("El estante estÃ¡ lleno para querer agregar un libro.");
    }
    
    public LibroA devolverLibroPorTitulo(String tituloLeido){
        for (int i = 0; i < cantidadLibros; i++)
            if (tituloLeido.equals(libros[i].getTitulo()))
                return libros[i];
        return null;
        /* Otra solucion:
        int aux = 0;
        while (aux < cantidadLibros) && (!titulo.equals(libros[aux.getTitulo()]))
            aux++;
        if (aux < cantidadLibros)
            return libros[aux];
        else
            return null;
        */
    }
}
