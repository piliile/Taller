package ejercicios;
import ejercicios.Cliente;
import PaqueteLectura.GeneradorAleatorio;
public class Habitacion {
    // definimos los atributos.
    private double costo;
    private boolean ocupada;
    private Cliente clientecito;

    // definimos el constructor.
    public Habitacion() {
        this.costo = GeneradorAleatorio.generarDouble(6001)+2000;
        this.ocupada = false;
        this.clientecito = null;
    }
    
    // definimos getters y setters.
    public double getCosto() {
        return costo;
    }

    public void setCosto(double costo) {
        this.costo = costo;
    }

    public boolean isOcupada() {
        return ocupada;
    }

    public void setOcupada(boolean ocupada) {
        this.ocupada = ocupada;
    }

    public Cliente getClientecito() {
        return clientecito;
    }

    public void setClientecito(Cliente clientecito) {
        this.clientecito = clientecito;
    }
    
    // definimos los métodos que nos piden.
    public void ingresarCliente(Cliente c){
        this.clientecito = c;
        this.ocupada = true; // importante!!
    }
    public void aumentarMonto(double montoRecibido){
        this.costo = this.costo + montoRecibido;
    }
    public String toString(){
        String aux = ("El costo de la habitacion es: " + this.costo + ".");
        if (ocupada)
            aux += (" Y está ocupada, con los siguientes datos del cliente: " + clientecito.toString());
        else
            aux += ("Y está libre.");
        return aux;
    }
    
}
